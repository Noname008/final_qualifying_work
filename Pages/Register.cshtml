@page
@model final_qualifying_work.Pages.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #f8f9fc;
            --accent-color: #2e59d9;
            --error-color: #e74a3b;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            align-items: center;
        }

        .register-card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            width: 100%;
            max-width: 500px;
        }

        .card-header {
            background: var(--primary-color);
            color: white;
            text-align: center;
            padding: 2rem;
            border-bottom: none;
        }

        .card-body {
            padding: 2.5rem;
            background: white;
        }

        .form-control {
            height: 50px;
            border-radius: 8px;
            border: 1px solid #d1d3e2;
            padding-left: 45px;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
            }

        .input-group-text {
            position: absolute;
            z-index: 5;
            height: 50px;
            width: 50px;
            background: transparent;
            border: none;
        }

        .btn-register {
            background: var(--primary-color);
            border: none;
            height: 50px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s;
        }

            .btn-register:hover {
                background: var(--accent-color);
            }

        .btn-login {
            background: white;
            color: var(--primary-color);
            border: 1px solid var(--primary-color);
            height: 50px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s;
        }

            .btn-login:hover {
                background: var(--secondary-color);
            }

        .brand-logo {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1rem;
            display: inline-block;
        }

        .password-strength {
            height: 5px;
            background: #e9ecef;
            margin-top: -10px;
            margin-bottom: 15px;
            border-radius: 3px;
            overflow: hidden;
        }

        .password-strength-bar {
            height: 100%;
            width: 0%;
            transition: width 0.3s;
        }

        .text-error {
            color: var(--error-color);
        }

        .form-floating label {
            padding-left: 3.5rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card register-card mx-auto">
                    <div class="card-header">
                        <div class="brand-logo">
                            <i class="fas fa-cube me-2"></i>MyApp
                        </div>
                        <h4>Создайте новый аккаунт</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" id="registerForm">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="position-relative">
                                        <span class="input-group-text">
                                            <i class="fas fa-user text-gray-500"></i>
                                        </span>
                                        <input asp-for="Input.Username" class="form-control ps-5" placeholder="Никнейм" autocomplete="username" />
                                    </div>
                                    <span asp-validation-for="Input.Username" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="position-relative">
                                        <span class="input-group-text">
                                            <i class="fas fa-envelope text-gray-500"></i>
                                        </span>
                                        <input asp-for="Input.Email" class="form-control ps-5" placeholder="Email" autocomplete="email" />
                                    </div>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="position-relative">
                                        <span class="input-group-text">
                                            <i class="fas fa-lock text-gray-500"></i>
                                        </span>
                                        <input asp-for="Input.Password" type="password" class="form-control ps-5" placeholder="Пароль" autocomplete="new-password" id="password" />
                                    </div>
                                    <div class="password-strength">
                                        <div class="password-strength-bar" id="passwordStrengthBar"></div>
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="position-relative">
                                        <span class="input-group-text">
                                            <i class="fas fa-lock text-gray-500"></i>
                                        </span>
                                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control ps-5" placeholder="Подтвердите пароль" autocomplete="new-password" />
                                    </div>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-register">
                                    <i class="fas fa-user-plus me-2"></i>Зарегистрироваться
                                </button>

                                <a asp-page="./Login" class="btn btn-login">
                                    <i class="fas fa-sign-in-alt me-2"></i>Уже есть аккаунт? Войти
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Индикатор сложности пароля
        document.getElementById('password').addEventListener('input', function () {
            const password = this.value;
            const strengthBar = document.getElementById('passwordStrengthBar');
            let strength = 0;

            if (password.length > 0) strength += 1;
            if (password.length >= 8) strength += 1;
            if (/[A-Z]/.test(password)) strength += 1;
            if (/[0-9]/.test(password)) strength += 1;
            if (/[^A-Za-z0-9]/.test(password)) strength += 1;

            const width = strength * 20;
            strengthBar.style.width = width + '%';

            // Изменение цвета в зависимости от сложности
            if (width <= 20) {
                strengthBar.style.backgroundColor = '#e74a3b'; // Красный
            } else if (width <= 60) {
                strengthBar.style.backgroundColor = '#f6c23e'; // Желтый
            } else {
                strengthBar.style.backgroundColor = '#1cc88a'; // Зеленый
            }
        });
    </script>
</body>
</html>